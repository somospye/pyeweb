---
import { Icon } from "astro-icon/components";
import NavbarTitle from "@/components/molecules/NavbarWithTitle.astro";
import SvgText from "@/components/molecules/SvgWithText.astro";
import { dataFooter } from "@/data";
---

<footer class="footer">
    <div class="container-navs">
    <div class="pye">
      <NavbarTitle
        title="PyE"
        navbarList={[dataFooter.dataPye]}
        class=""
      />
    </div>
    <div class="comunity"> 
      <NavbarTitle
        title="Comunidad"
        navbarList={[dataFooter.dataCommunity]}
        class=""
      />
    </div>
    <div class="social">
      <NavbarTitle
        title="Redes"
        navbarList={[dataFooter.dataSocialMedia]}
        class=""
      />
    </div>
  </div>
  <div class="mision-container">
    <SvgText text={dataFooter.message} icon={dataFooter.icon} class="svgTextFooter"/>
    <blockquote>
      <p><i>El conocimiento es la opinión cierta.</i></p>
      <footer>
        <cite>- Platón</cite>
      </footer>
    </blockquote>
    <!-- <div class="linkSocial">
      <a href="https://github.com/somospye" aria-label="Boton al github de PyE">
        <Icon name="github" />
      </a>
      <a href="https://twitch.tv" aria-label="Boton al twitch de PyE">
        <Icon name="twitch" />
      </a>
      <a href="https://www.youtube.com/@programadoresyestudiantes" aria-label="Boton al Canal de youtube de PyE">
        <Icon name="youtube" />
      </a>
    </div> -->
  </div>
  <div class="copy-container">
  <p>{dataFooter.copyright}</p>
  <p><small>{dataFooter.contributin}</small></p>
  </div>
</footer>


<style>
  .footer {
    background-color: var(--navbar-background);
    transition: background-color 0.2s, color 0.2s;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto auto;
    grid-column-gap: 0px;
    grid-row-gap: 0px; 
    padding: 0.5em 2em;
    margin-top: 5em;
  }

  .container-navs { 
    grid-area: 1 / 1 / 2 / 2; 
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(4, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }

  .mision-container {
    grid-area: 1 / 2 / 2 / 3; 
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  blockquote {
    text-align: right; 
  }

  .linkSocial {
    display: flex;
    max-width: 10em;
    width: 100%;
    gap: 3em;
    transition: 0.1s ease;
    margin: 0 auto;

    & a {
    [data-icon] {
      color: var(--text-color);
      width: 2em;
      height: 2em;
      transition: 0.15s ease;
      &:hover {
      color: var(--principal-color);
      }
    }
  }
  }
 


  .copy-container {
    text-align: center;
    color: gray;
    & small {
     font-style: italic; 
    }
  }

.pye { grid-area: 1 / 1 / 4 / 2; }
.community { grid-area: 1 / 2 / 4 / 3; }
.social { grid-area: 1 / 3 / 4 / 4; }
.copy-container { grid-area: 2 / 1 / 3 / 3; } 

 </style>
