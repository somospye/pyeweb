---
interface Props {
	title: string;
}

import { ClientRouter } from "astro:transitions";
import Footer from "@/components/organism/Footer.astro";
import Header from "@/components/organism/HeaderHome.astro";

const { title } = Astro.props as Props;
---

<!doctype html >
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>PyE | {title}</title>
    <script is:inline>
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      };

      const theme = getTheme();
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    </script>
    <ClientRouter />
	</head>
	<body>
    <Header />
		<main>
			<slot />
		</main>
    <Footer />
	</body>
</html>


<style is:global>
  :root{
    --bg-color: oklch(12.9% 0.042 264.695);
    --text-color: oklch(98.4% 0.003 247.858);
    --navbar-background: oklch(20.8% 0.042 265.755);
    --principal-color: oklch(58.8% 0.158 241.966);
    --hover-button-theme: oklch(12.9% 0.042 264.695);;
  }

  [data-theme="light"] {
    --bg-color: oklch(98.5% 0.01 264);
    --text-color: oklch(15% 0.04 265);
    --navbar-background: oklch(92% 0.02 265);
    --principal-color: oklch(58.8% 0.158 241.966);
    --hover-navbar: oklch(55% 0.16 242);
    --hover-button-theme: oklch(88% 0.03 265);  
  }


  *,*::before, *::after{
    box-sizing: border-box;
  }
  
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
	html,
	body {
		margin: 0;
		width: 100%;
    color-scheme: dark light;
	}

  body {
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.2s, color 0.2s;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  } 

  main {
    flex-grow: 1;
  } 
  </style>
